    @media (max-device-width: 480px) {



        .confirm-info li p{
            font-size: 14px;
            /* equivalent to 16px */
            line-height: 1.375;
            /* equivalent to 22px */
        }
        ul.confirm-info {
            padding: 0;
            margin: 0;
        }
        ul.confirm-info li {
            padding: 0;
            padding-bottom: 50px;
        }


    }

</style>


